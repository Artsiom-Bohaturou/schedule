{
    "openapi": "3.0.0",
    "info": {
        "title": "Schedule API Documentation",
        "description": "АПИ предоставляет доступ к расписанию занятий, экзаменов и их сортировке",
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/api/v1/schedule": {
            "description": "Расписание"
        },
        "/api/v1/schedule/group": {
            "get": {
                "tags": [
                    "Расписание"
                ],
                "summary": "Получить расписание для группы",
                "parameters": [
                    {
                        "name": "Content-Type",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "application/json"
                            ]
                        }
                    },
                    {
                        "name": "Accept",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "application/json"
                            ]
                        }
                    },
                    {
                        "name": "group",
                        "in": "query",
                        "description": "Номер группы",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "ИП291"
                        }
                    },
                    {
                        "name": "subgroup",
                        "in": "query",
                        "description": "Номер подгруппы",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    },
                    {
                        "name": "type",
                        "in": "query",
                        "description": "Тип занятия",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "ЛР"
                        }
                    },
                    {
                        "name": "weeks[]",
                        "in": "query",
                        "description": "Номера недель, для которых нужно получить расписание",
                        "required": false,
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "integer",
                                "enum": [
                                    1,
                                    2,
                                    3,
                                    4
                                ],
                                "example": [
                                    1,
                                    2,
                                    3
                                ]
                            }
                        }
                    },
                    {
                        "name": "weekdays[]",
                        "in": "query",
                        "description": "Номера дней недели, для которых нужно получить расписание",
                        "required": true,
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "integer",
                                "enum": [
                                    1,
                                    2,
                                    3,
                                    4,
                                    5,
                                    6,
                                    7
                                ],
                                "example": [
                                    1,
                                    2,
                                    3
                                ]
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Успешный ответ",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "properties": {
                                                "schedule": {
                                                    "type": "array",
                                                    "items": {
                                                        "properties": {
                                                            "id": {
                                                                "type": "integer",
                                                                "example": 141
                                                            },
                                                            "subject": {
                                                                "properties": {
                                                                    "abbreviated": {
                                                                        "type": "string",
                                                                        "example": "ООП"
                                                                    },
                                                                    "full": {
                                                                        "type": "string",
                                                                        "example": "Объектно-ориентированнное программирование"
                                                                    }
                                                                },
                                                                "type": "object"
                                                            },
                                                            "type": {
                                                                "properties": {
                                                                    "abbreviated": {
                                                                        "type": "string",
                                                                        "example": "ЛР"
                                                                    },
                                                                    "full": {
                                                                        "type": "string",
                                                                        "example": "Лабораторная работа"
                                                                    }
                                                                },
                                                                "type": "object"
                                                            },
                                                            "auditory": {
                                                                "type": "integer",
                                                                "example": 202
                                                            },
                                                            "building": {
                                                                "type": "string",
                                                                "example": "ул. Франциска Скорины 8"
                                                            },
                                                            "weeks": {
                                                                "type": "string",
                                                                "example": "1, 3"
                                                            },
                                                            "subgroup": {
                                                                "type": "integer",
                                                                "example": 2
                                                            },
                                                            "time": {
                                                                "properties": {
                                                                    "number": {
                                                                        "type": "integer",
                                                                        "example": 5
                                                                    },
                                                                    "start": {
                                                                        "type": "string",
                                                                        "example": "16:20"
                                                                    },
                                                                    "end": {
                                                                        "type": "string",
                                                                        "example": "18:00"
                                                                    }
                                                                },
                                                                "type": "object"
                                                            },
                                                            "weekday": {
                                                                "properties": {
                                                                    "number": {
                                                                        "type": "integer",
                                                                        "example": 1
                                                                    },
                                                                    "name": {
                                                                        "type": "string",
                                                                        "example": "Понедельник"
                                                                    }
                                                                },
                                                                "type": "object"
                                                            },
                                                            "teacher": {
                                                                "properties": {
                                                                    "id": {
                                                                        "type": "integer",
                                                                        "example": 2
                                                                    },
                                                                    "fullName": {
                                                                        "type": "string",
                                                                        "example": "Петров В. В."
                                                                    },
                                                                    "department": {
                                                                        "type": "string",
                                                                        "example": null
                                                                    },
                                                                    "position": {
                                                                        "type": "string",
                                                                        "example": null
                                                                    }
                                                                },
                                                                "type": "object"
                                                            }
                                                        },
                                                        "type": "object"
                                                    }
                                                },
                                                "group": {
                                                    "$ref": "#/components/schemas/GroupResource"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Запрошенная группа не найдена"
                    }
                }
            }
        },
