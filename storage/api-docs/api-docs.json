        "/api/v1/schedule/exams": {
            "get": {
                "tags": [
                    "Расписание"
                ],
                "summary": "Получить расписание экзаменов",
                "description": "Возращает расписание экзамнов по фио преподователя или номеру группы",
                "parameters": [
                    {
                        "name": "Content-Type",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "application/json"
                            ]
                        }
                    },
                    {
                        "name": "Accept",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "application/json"
                            ]
                        }
                    },
                    {
                        "name": "group",
                        "in": "query",
                        "description": "Номер группы",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "teacher",
                        "in": "query",
                        "description": "Фио преподователя",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/ExamResource"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Unprocessable Entity"
                    }
                }
            }
        },
        "/api/v1/schedule/group/list": {
            "get": {
                "tags": [
                    "Расписание"
                ],
                "summary": "Получить список групп",
                "description": "Возращает список всех групп с пагинацией. 15 по умолчанию.",
                "operationId": "getGroupList",
                "parameters": [
                    {
                        "name": "Content-Type",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "application/json"
                            ]
                        }
                    },
                    {
                        "name": "Accept",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "application/json"
                            ]
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "The page number",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "per_page",
                        "in": "query",
                        "description": "Number of results per page",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/PaginatedGroupResource"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "ExamResource": {
                "properties": {
                    "id": {
                        "description": "Exam ID",
                        "type": "integer"
                    },
                    "subject": {
                        "description": "Subject information",
                        "properties": {
                            "abbreviated": {
                                "description": "Subject abbreviated name",
                                "type": "string"
                            },
                            "full": {
                                "description": "Subject full name",
                                "type": "string"
                            }
                        },
                        "type": "object"
                    },
                    "type": {
                        "description": "Type of exam",
                        "properties": {
                            "abbreviated": {
                                "description": "Type abbreviated name",
                                "type": "string"
                            },
                            "full": {
                                "description": "Type full name",
                                "type": "string"
                            }
                        },
                        "type": "object"
                    },
                    "auditory": {
                        "description": "Auditory number",
                        "type": "integer"
                    },
                    "building": {
                        "description": "Building number",
                        "type": "string"
                    },
                    "teacher": {
                        "description": "Teacher information",
                        "properties": {
                            "id": {
                                "description": "Teacher ID",
                                "type": "integer"
                            },
                            "fullName": {
                                "description": "Teacher full name",
                                "type": "string"
                            },
                            "department": {
                                "description": "Teacher department",
                                "type": "string"
                            },
                            "position": {
                                "description": "Teacher position",
                                "type": "string"
                            }
                        },
                        "type": "object"
                    },
                    "group": {
                        "$ref": "#/components/schemas/GroupResource"
                    },
                    "date": {
                        "description": "Exam date and time",
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "PaginatedGroupResource": {
                "description": "Paginated list of groups",
                "properties": {
                    "data": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/GroupResource"
                        }
                    },
                    "links": {
                        "properties": {
                            "first": {
                                "type": "string"
                            },
                            "last": {
                                "type": "string"
                            },
                            "prev": {
                                "type": "string",
                                "nullable": true
                            },
                            "next": {
                                "type": "string",
                                "nullable": true
                            }
                        },
                        "type": "object"
                    },
                    "meta": {
                        "properties": {
                            "current_page": {
                                "type": "integer"
                            },
                            "from": {
                                "type": "integer"
                            },
                            "last_page": {
                                "type": "integer"
                            },
                            "links": {
                                "type": "array",
                                "items": {
                                    "properties": {
                                        "url": {
                                            "type": "string",
                                            "nullable": true
                                        },
                                        "label": {
                                            "type": "string"
                                        },
                                        "active": {
                                            "type": "boolean"
                                        }
                                    },
                                    "type": "object"
                                }
                            },
                            "path": {
                                "type": "string"
                            },
                            "per_page": {
                                "type": "integer"
                            },
                            "to": {
                                "type": "integer"
                            },
                            "total": {
                                "type": "integer"
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            },
            "GroupResource": {
                "description": "Group model resource",
                "properties": {
                    "id": {
                        "description": "The group ID",
                        "type": "integer"
                    },
                    "name": {
                        "description": "The name of the group",
                        "type": "string",
                        "example": "СП091"
                    },
                    "type": {
                        "description": "The group's type details",
                        "properties": {
                            "names": {
                                "properties": {
                                    "abbreviated": {
                                        "type": "string",
                                        "example": "ВО"
                                    },
                                    "full": {
                                        "type": "string",
                                        "example": "Высшее образование"
                                    }
                                },
                                "type": "object"
                            },
                            "timeType": {
                                "description": "The time type of the group",
                                "type": "string",
                                "example": "Дневное"
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            }
        }
    }
}