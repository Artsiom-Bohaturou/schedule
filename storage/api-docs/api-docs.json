                                                                "type": "object"
                                                            },
                                                            "auditory": {
                                                                "type": "integer",
                                                                "example": 202
                                                            },
                                                            "building": {
                                                                "type": "string",
                                                                "example": "ул. Франциска Скорины 8"
                                                            },
                                                            "weeks": {
                                                                "type": "string",
                                                                "example": "1, 3"
                                                            },
                                                            "subgroup": {
                                                                "type": "integer",
                                                                "example": 2
                                                            },
                                                            "time": {
                                                                "properties": {
                                                                    "number": {
                                                                        "type": "integer",
                                                                        "example": 5
                                                                    },
                                                                    "start": {
                                                                        "type": "string",
                                                                        "example": "16:20"
                                                                    },
                                                                    "end": {
                                                                        "type": "string",
                                                                        "example": "18:00"
                                                                    }
                                                                },
                                                                "type": "object"
                                                            },
                                                            "weekday": {
                                                                "properties": {
                                                                    "number": {
                                                                        "type": "integer",
                                                                        "example": 1
                                                                    },
                                                                    "name": {
                                                                        "type": "string",
                                                                        "example": "Понедельник"
                                                                    }
                                                                },
                                                                "type": "object"
                                                            },
                                                            "teacher": {
                                                                "properties": {
                                                                    "id": {
                                                                        "type": "integer",
                                                                        "example": 2
                                                                    },
                                                                    "fullName": {
                                                                        "type": "string",
                                                                        "example": "Петров В. В."
                                                                    },
                                                                    "department": {
                                                                        "type": "string",
                                                                        "example": null
                                                                    },
                                                                    "position": {
                                                                        "type": "string",
                                                                        "example": null
                                                                    }
                                                                },
                                                                "type": "object"
                                                            }
                                                        },
                                                        "type": "object"
                                                    }
                                                },
                                                "group": {
                                                    "properties": {
                                                        "id": {
                                                            "type": "integer",
                                                            "example": 9
                                                        },
                                                        "name": {
                                                            "type": "string",
                                                            "example": "ИП291"
                                                        },
                                                        "type": {
                                                            "properties": {
                                                                "names": {
                                                                    "properties": {
                                                                        "abbreviated": {
                                                                            "type": "string",
                                                                            "example": "ВО"
                                                                        },
                                                                        "full": {
                                                                            "type": "string",
                                                                            "example": "Высшее образование"
                                                                        }
                                                                    },
                                                                    "type": "object"
                                                                },
                                                                "timeType": {
                                                                    "type": "string",
                                                                    "example": "Заочное"
                                                                }
                                                            },
                                                            "type": "object"
                                                        }
                                                    },
                                                    "type": "object"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Запрошенная группа не найдена"
                    }
                }
            }
        },
